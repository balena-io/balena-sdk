{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "outDir": "build",
        "noImplicitAny": true,
        "removeComments": false,
        "rootDir": "lib/",
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "target": "es5",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node"
    },
    "include": [
        "typings/*.d.ts",
        "lib/**/*.ts",
        "lib/**/*.d.ts"
    ]
}
